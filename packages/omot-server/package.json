{
  "name": "omot-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0 -p 3140",
    "build": "next build",
    "start": "next start -H 0.0.0.0 -p 3140",
    "lint": "next lint",
    "dev:compose-up": "cd service && docker compose --env-file ../.env up -d",
    "dev:compose-down": "cd service && docker compose --env-file ../.env down",
    "dev:compose-logs": "cd service && docker compose --env-file ../.env logs",
    "dev:compose-pull": "cd service && docker compose --env-file ../.env pull",
    "dev:forever-start": "forever start -c \"yarn start\" .",
    "dev:forever-stop": "forever stopall && sudo kill -9 `sudo lsof -t -i:3140`",
    "prod:generate-sql": "bash ./scripts/generate-sql.sh",
    "prod:generate-deploy": "node ./scripts/generate-deploy.js"
  },
  "dependencies": {
    "@bull-board/express": "^5.9.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@meilisearch/instant-meilisearch": "^0.20.0",
    "@mui/icons-material": "^5.14.11",
    "@mui/material": "^5.15.14",
    "@mui/system": "^6.0.2",
    "@mui/x-date-pickers": "^7.16.0",
    "@prisma/client": "^5.6.0",
    "bull": "^4.11.5",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "fetch-retry": "^5.0.6",
    "file-type": "^18.7.0",
    "image-size": "^1.0.2",
    "instantsearch.css": "^8.1.0",
    "luxon": "^3.5.0",
    "minio": "^7.1.3",
    "next": "^14.2.8",
    "next-connect": "^1.0.0-next.4",
    "nuqs": "^1.17.8",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "react": "^18",
    "react-dom": "^18",
    "react-instantsearch": "^7.5.0",
    "react-tweet-card": "^0.2.5",
    "twitter-data-parser": "^1.0.0",
    "undici": "^5.28.0",
    "uuid": "^9.0.1",
    "virtua": "^0.33.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bull": "^4.10.0",
    "@types/express": "^4.17.21",
    "@types/luxon": "^3.4.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^9.0.7",
    "eslint": "^8",
    "eslint-config-next": "14.2.8",
    "prisma": "^5.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^5"
  },
  "type": "module"
}
